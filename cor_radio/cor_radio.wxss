.cor_radio_c{
    display: flex;
    align-items: center;
}
.cor_radio{
    width:28rpx;
    height:28rpx;
    border-radius: 5rpx;
    border: #1498ff solid 1px;
}
.cor_radio_image{
    width: 100%;
    height: 100%;
    display: none;
}
.cor_radio_image.show{
    display: block;
}
.type_2.cor_radio{
    width:40rpx;
    height:40rpx;
    border-radius: 50%;
    border: #b4b4b4 solid 1px;
}
.type_2.cor_radio.active{
    border: none;
}