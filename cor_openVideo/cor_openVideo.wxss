/* components_simple/cor_openVideo/cor_openVideo.wxss */
.cor_openVideo{
    display:block;
}
.video_btn{
    display: flex;
    align-items: center;
    margin-left:10rpx;
}
.video_btn_text{
    margin-left: 10rpx;
    text-decoration: underline;
    color: #1498FF;
    white-space: nowrap;
}
.videoPanel{
    position:fixed;
    top: 0px;
    left: 0px;
    height: 100%;
    width: 100%;
    background: rgba(0, 0, 0, 0.445);
    z-index: 6;
    display: flex;
    align-items: center;
    justify-content: center;
}
.video{
    width: 100%;
}